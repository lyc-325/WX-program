/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.button {
  padding: 20px;
}

.navbar{  
  flex: none;  
  display: flex;  
  background: #fff; 
  overflow-x: scroll; 
}  

.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  white-space: nowrap;
  padding: 0 20rpx;
}

.navbar .item.active{  
  color: #1EB571;  
}

.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #1EB571;  
}  

.form-error {
  background-color: red;
  color: #fff;
  position: fixed;
  padding: 10rpx;
  top:0;
  width: 100%;
  text-align: center;
}

input.error{
  color: red;
}