.operation {
  position: fixed;
  display: flex;
  width: 100%;
  bottom: 0;
  left: 0;
  /*align-items: flex-end;*/
  padding: 5px 5px;
  border-top: 1px solid #eee;
  z-index: 5;
}

.operation > view {
  padding: 10rpx;
}

.operation textarea{
  border: 1px solid #eee;
  padding: 5px;
  font-size: 35rpx;
  width: 60%;
}

.operation .buttons {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.operation > .button {
  flex-grow: 1;  
  padding: 0;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
  margin-top: 12rpx;
}

.operation > .button image{
  width: 50rpx;
  height: 50rpx;
}