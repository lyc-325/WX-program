.container {
  padding: 100rpx 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .avatar {
  padding: 50rpx;
  text-align: center;
}

.container .avatar image {
  width: 200rpx;
  height: 200rpx;
}

.container .info {
  display: flex;
  flex-direction: column;
  width: 100%;  
}

.container .info > .item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.container .add {
  margin-top: 50rpx;
  background: red;
  color: white;
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  padding: 10rpx;
  border-radius: 5px;
}