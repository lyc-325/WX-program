/* board_detail.wxss */
.container {
  display: flex;
  flex-flow: column;
  width: 100%;
}
.head {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}
.item {
  font-size: 28rpx;
  display: flex;
  flex-flow: row;
  width: 94%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  justify-content: space-between;
  margin-top: 20rpx;
}
.imgBar {
  white-space: nowrap;
  display: flex;
  margin-top: 20rpx;
}
.image {
  display: inline-block;
  width: 375rpx;
  height: 240rpx;
}
image {
  width: 100%;
  height: 100%;
}
.area{
  width: 94%;
  display: flex;
  flex-flow: column;
  margin-top: 20rpx;
}
.area > .label {
  font-size: 36rpx;
  margin-bottom: 16rpx;
}
.area > .value {
  font-size: 28rpx;
}