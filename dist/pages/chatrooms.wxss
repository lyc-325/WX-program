
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx;
  margin-bottom: -20rpx;
}

.list>.item {
  display: flex;
  flex-direction: column;
  width: 300rpx;
  height: 350rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
  border: 1px solid #eee;
}

.list>.item .cover {
  width: 100%;
  height: 300rpx;
}

.list>.item .cover image {
  width: 100%;
  width: 300rpx;
  height: 300rpx;
}

.list>.item .info {
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
}

.list>.item .info .members {
  position: absolute;
  right: 0;
  padding-right: 10rpx;
}

.list>.item .info .title {
  position: absolute;
  left: 0;
  padding-left: 10rpx;
}
