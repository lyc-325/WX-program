
.container {
  display: flex;
  flex-direction: column;
}

.container .title {
  text-align: center;
  font-size: 20px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #aaa;
}

.container > .item {
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.container > .item .label {
  padding: 10rpx;
  width: 150rpx;
  text-align:center;
}

.container > .item input {
  border: 1px solid #eee;
  display:block;
  height:1.8rem;
  text-overflow:clip;
  overflow:hidden;
  white-space:nowrap;
  font-family:UICTFontTextStyleBody;
  border-radius:5%;
}
.register_btn {
  width:100%;
  height:55px;
  position:fixed;
  bottom:0;
  right:0;
  border-radius:0;
  line-height:55px;
  color:rgb(255,255,255);
  background-color: #1eb571;

}
